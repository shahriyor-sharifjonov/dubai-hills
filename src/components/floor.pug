mixin floor() 
    section.section.white.floor#floor 
        .section__body.floor__body.container 
            h2.floor__title Floor plans 
            .floor__tab 
                button(type='button' data-target="#floor1").floor__tab-item.active 1 bedroom 
                button(type='button' data-target="#floor2").floor__tab-item 2 bedrooms 
                button(type='button' data-target="#floor3").floor__tab-item 3 bedrooms 
            .floor__content.active#floor1 
                +slider 
            .floor__content#floor2 
                +slider-2 
            .floor__content#floor3 
                +slider-3 