mixin slider()
    .swiper.floor__swiper
        .swiper-wrapper 
            .floor__item.swiper-slide 
                .floor__item-img 
                    img(src="@img/floor-1.png", alt="" draggable="false")
                .floor__item-info 
                    .floor__item-title TITLE 
                    .floor__item-info
                        p.floor__item-info-p Bedrooms:  <span>1</span>
                        p.floor__item-info-p Total area:  <span>665 SQ FT</span>
